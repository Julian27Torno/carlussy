    <script>
        function showCoffeeSection(section) {
            // Hide all coffee sections
            let sections = document.querySelectorAll('.coffee-section');
            sections.forEach(function (sec) {
                sec.style.display = 'none';
            });

            // Show the selected coffee section
            let selectedSection = document.getElementById(section);
            selectedSection.style.display = 'block';
        }
    </script>

