<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .menu-item {
            margin-bottom: 20px;
        }
        img {
            max-width: 150px;
            height: auto;
        }
    </style>
</head>
<body>
    <h1>Menu</h1>

    <!-- Success Message -->
    <?php if (isset($success)): ?>
        <p style="color: green;"><?php echo htmlspecialchars($success); ?></p>
    <?php endif; ?>

    <h2>Menu Items</h2>
    <ul>
        <?php if (!empty($menuItems)): ?>
            <?php foreach ($menuItems as $item): ?>
                <li class="menu-item">
                    <strong><?php echo htmlspecialchars($item['name']); ?></strong><br>
                    Type: <?php echo isset($item['type']) ? htmlspecialchars($item['type']) : 'N/A'; ?><br>
                    Price: $<?php echo number_format($item['price'], 2); ?><br>
                    <?php if (!empty($item['image'])): ?>
                        <img src="<?php echo htmlspecialchars($item['image']); ?>" alt="<?php echo htmlspecialchars($item['name']); ?>"><br>
                    <?php else: ?>
                        <p>No image available</p>
                    <?php endif; ?>
                    <hr>
                </li>
            <?php endforeach; ?>
        <?php else: ?>
            <p>No menu items found.</p>
        <?php endif; ?>
    </ul>
</body>
</html>
